<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        #battlefield{
            border: 1px solid black;
            float:left;
        }
        #status{
            border: 1px solid black;
            margin-left: 10px;
            float:left;
            width:300px;
            height:768px
        }
    </style>
</head>
<body>
    <h1>Async Robo Royal Rumble</h1>
    <canvas width="1024" height="768" id="battlefield"></canvas>
    <div id="status">
        <div class="contestant robotContainer">
            <div class="sprite">
                <canvas width="50" height="50" style="background-color:gray" id="war-pig"></canvas>
            </div>
        </div>
    </div>
    <script>
        var customRobots = {{{robots}}};
        var contestantCanvasContext = document.getElementById('war-pig').getContext('2d');

        var contestantBody = new Image();
        contestantBody.src = '/war-pig/body.png';

        var contestantTurret = new Image();
        contestantTurret.src = '/war-pig/turret.png';

        contestantCanvasContext.drawImage(contestantBody, 0, 0);
        contestantCanvasContext.drawImage(contestantTurret, 0, 0);
    </script>
    <script data-main="scripts/main" src="scripts/require.js"></script>
</body>
</html>